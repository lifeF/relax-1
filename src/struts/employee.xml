<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="emp" namespace="/emp" extends="json-default, authorized">
		
		<action name="ListGetForAdmin" class="com.doerit.action.employee.EmployeeAction" method="viewAll">
			<result name="success">/WEB-INF/content/admin/adminView.jsp</result>
		</action>
		<action name="ChangeState" class="com.doerit.action.employee.EmployeeAction" method="ChangeStateByID">
			<result name="success">/WEB-INF/content/admin/adminView.jsp</result>
		</action>
		
		
		<action name="RegisterEMP" class="com.doerit.action.employee.EmployeeAction" method="RegisterEMP">
			<result name="success">/WEB-INF/content/admin/adminRegistration.jsp</result>
		</action>
		
		<action name="addEmp" class="com.doerit.action.employee.EmployeeAction" method="addEMP">
			<result name="success">/WEB-INF/content/admin/adminRegistration.jsp</result>
			<result name="input">/WEB-INF/content/admin/adminRegistration.jsp</result>
		</action>
		
		
		
	</package>
		
</struts>